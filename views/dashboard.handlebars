<div class="container-fluid"> 
    <div class="row py-5">
        <div class="col-10 col-md-6 mx-auto">
            <button type="button" class="btn btn-primary" id="create-post"> + Create New Post</button>
            {{#if posts.length}}
            <section> 
                <h2>Your Dashboard</h2>
                <ul>
                    {{#each posts as |post|}}
                    <li>
                        {{post-info post}}
                        <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
                    </li>
                    {{/each}}
                </ul>
            </section>
            {{/if}}
        </div>
    </div>
</div>

<div class="container">
    {{> file-upload-form}}
    <div class="container-fluid">
        <h1>Posts</h1>
            <div class="row">
                {{#if posts}}
                    {{#each posts as |post| }}
                        {{> post-card post=post }}
                    {{/each}}
                {{else }}
                    <p>There are currently no posts.</p>
                {{/if}}
            </div>
    </div>
</div>


<script src="/js/upload.js"></script>

<script src="/js/create-post.js" ></script>